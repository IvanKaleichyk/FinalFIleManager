<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="jumpToStart"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.3"
                android:scaleY="1.3"
                motion:framePosition="16"
                motion:motionTarget="@id/firstCircle" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="32"
                motion:motionTarget="@id/firstCircle" />
            <KeyAttribute
                android:scaleX="1.3"
                android:scaleY="1.3"
                motion:framePosition="48"
                motion:motionTarget="@id/secondCircle" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="64"
                motion:motionTarget="@id/secondCircle" />
            <KeyAttribute
                android:scaleX="1.3"
                android:scaleY="1.3"
                motion:framePosition="80"
                motion:motionTarget="@id/thirdCircle" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end"></ConstraintSet>
</MotionScene>