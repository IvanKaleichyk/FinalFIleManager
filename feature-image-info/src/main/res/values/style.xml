<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textTitleFile" parent="basicText">
        <item name="android:textSize">@dimen/logoTextSize</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textShowFile" parent="basicText">
        <item name="android:layout_width">200dp</item>
        <item name="android:textSize">@dimen/basicTextSize</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="textImageName" parent="basicText">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>